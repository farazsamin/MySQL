/* Use of Having clause*/

create database varsity; 
use varsity; 

create table student(
	id int primary key,
    subject varchar(34)

);

/* adding new column */ 
alter table student 
add column age int default 18; 

/* change data type of age column */ 
alter table student 
modify column age varchar(23); 

/* change column name */ 
alter table student 
change column age AGE int; 

/* Delete the column */ 
alter table student 
drop column AGE;

insert into student values 
(1,"science"),
(2,"arts"),
(3,"arts"),
(4,"science");

select * from student;


